@{
    ViewData["Title"] = "Home Page";
}
@model Dish
<div class="text-center">
    <h1>Add a new Dish</h1>
</div>
<a href="/">Home</a>
<form action="/add" method="post">
    <div class="form-group m-2">
        <label for="Chef">Chef's Name</label>
        <input asp-for="Chef">
        <span asp-validation-for="Chef"> </span>
    </div>
    <div class="form-group m-2">
        <label for="Name">Dish Name</label>
        <input asp-for="Name">
        <span asp-validation-for="Name"> </span>
    </div>
    <div class="form-group m-2">
        <label for="Calories"># of Calories</label>
        <input asp-for="Calories">
        <span asp-validation-for="Calories"> </span>
    </div>
    <div class="form-group m-2">
        <label for="Tastiness">Tastiness</label>
        <select asp-for="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness"> </span>
    </div>
    <div class="form-group m-2">
        <label for="Description">Description</label>
        <textarea asp-for="Description" cols="30" rows="3"></textarea>
        <span asp-validation-for="Description"> </span>
    </div>
    <input type="submit" value="Add Dish">
</form>
